<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="171dp"
            android:layout_height="147dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp">

                <View
                    android:id="@+id/containerComponents_notes"
                    android:layout_width="166dp"
                    android:layout_height="137dp"
                    android:background="@drawable/bg_note"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.139"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/containerComponents_notes3"
                    android:layout_width="156dp"
                    android:layout_height="132dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_note2"
                    app:layout_constraintBottom_toBottomOf="@+id/containerComponents_notes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txt_title_notes"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Título"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/containerComponents_notes"
                    app:layout_constraintEnd_toEndOf="@+id/containerComponents_notes"
                    app:layout_constraintStart_toStartOf="@+id/containerComponents_notes"
                    app:layout_constraintTop_toTopOf="@+id/containerComponents_notes"
                    app:layout_constraintVertical_bias="0.084" />

                <TextView
                    android:id="@+id/txt_subtitle"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Subtítulo:"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/containerComponents_notes"
                    app:layout_constraintEnd_toEndOf="@+id/containerComponents_notes"
                    app:layout_constraintHorizontal_bias="0.23"
                    app:layout_constraintStart_toStartOf="@+id/containerComponents_notes"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_notes"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/txt_datetime"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="* Identidade"

                    android:textColor="@color/white"
                    android:textSize="7dp"
                    app:layout_constraintBottom_toBottomOf="@+id/containerComponents_notes"
                    app:layout_constraintEnd_toEndOf="@+id/containerComponents_notes"
                    app:layout_constraintHorizontal_bias="0.212"
                    app:layout_constraintStart_toStartOf="@+id/containerComponents_notes"
                    app:layout_constraintTop_toBottomOf="@+id/txt_subtitle"
                    app:layout_constraintVertical_bias="0.144" />




        </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>