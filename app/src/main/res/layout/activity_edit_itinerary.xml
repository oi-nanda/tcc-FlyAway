<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/background"
    tools:context=".Fragments.EditProfileInfoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back_itinerary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:onClick="onClickGoToProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back"
                tools:ignore="MissingConstraints" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/img"
                   android:layout_width="match_parent"
                   android:layout_marginTop="100dp"
                   android:layout_height="180dp"
                   app:srcCompat="@drawable/img"
                   tools:ignore="MissingConstraints" />
           </LinearLayout>

            <TextView
                android:id="@+id/txt_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Alterar informações do roteiro"
                android:textColor="@color/darkblue"
                android:textSize="23dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_description"
                style="@style/Edit_Text"
                android:layout_width="311dp"
                android:layout_height="100dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textAlignment="viewStart"
                android:elevation="3dp"
                android:hint="Descrição do roteiro"
                android:inputType="text"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_edit_profile" />

            <EditText
                android:id="@+id/edit_number_of_travelers"
                style="@style/Edit_Text"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:elevation="3dp"
                android:hint="Número de viajantes"
                android:inputType="number"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_description" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_edit_info_itinerary"
                style="@style/Button_Login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/button_login"
                android:text="Salvar"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/edit_number_of_travelers"
                app:layout_constraintStart_toStartOf="@+id/edit_number_of_travelers"
                app:layout_constraintTop_toBottomOf="@+id/edit_number_of_travelers"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>