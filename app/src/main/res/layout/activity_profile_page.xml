<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".ProfilePageActivity">

    <include layout="@layout/header_after_login_page" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header_after_login"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                tools:ignore="MissingConstraints" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="360dp"
                                android:background="@drawable/top_backgroud_profile"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/imageView10"
                                    android:layout_width="416dp"
                                    android:layout_height="358dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/circles"
                                    tools:ignore="MissingConstraints"
                                    tools:layout_editor_absoluteX="1dp" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginTop="35dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/perfil_padrao" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Nome do Usuário"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                                app:layout_constraintStart_toStartOf="@+id/imageView9"
                                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="175dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:text="usuario@gmail.com"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/textView"
                                app:layout_constraintStart_toStartOf="@+id/textView"
                                app:layout_constraintTop_toBottomOf="@+id/textView" />

                            <LinearLayout
                                android:layout_width="368dp"
                                android:layout_height="311dp"
                                android:layout_marginTop="60dp"
                                android:layout_marginBottom="24dp"
                                android:background="@drawable/white_backgroud_profile"
                                android:elevation="3dp"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:textAlignment="center">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:layout_weight="0.3333"
                                        android:background="@drawable/gray_background_profile"
                                        android:elevation="5dp"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_margin="12dp"
                                            android:background="@drawable/circle_background_profile">

                                            <ImageView
                                                android:id="@+id/liked_scrips_image"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/liked_scripts" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <TextView
                                            android:id="@+id/liked_scrips_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:layout_marginBottom="8dp"
                                            android:text="Salvos"
                                            android:textAlignment="center"
                                            android:textColor="#000000"
                                            android:textSize="13dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:layout_weight="0.3333"
                                        android:background="@drawable/gray_background_profile"
                                        android:elevation="5dp"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_margin="12dp"
                                            android:background="@drawable/circle_background_profile">

                                            <ImageView
                                                android:id="@+id/my_scripts_image"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/my_scripts" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <TextView
                                            android:id="@+id/my_scripts_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:layout_marginBottom="8dp"
                                            android:text="Meus Roteiros"
                                            android:textAlignment="center"
                                            android:textColor="#000000"
                                            android:textSize="13dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:layout_weight="0.3333"
                                        android:background="@drawable/gray_background_profile"
                                        android:elevation="5dp"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_margin="12dp"
                                            android:background="@drawable/circle_background_profile">

                                            <ImageView
                                                android:id="@+id/settings_image"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/cogwheel" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <TextView
                                            android:id="@+id/settings_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:layout_marginBottom="8dp"
                                            android:text="Configurações"
                                            android:textAlignment="center"
                                            android:textColor="#000000"
                                            android:textSize="13dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textBio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Bio:"
                                            android:textColor="#000000"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/bio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Realizando o sonho de viajar o mundo s2"
                                            android:textAlignment="viewEnd"
                                            android:textColor="#5B5B5B"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <View
                                        android:id="@+id/view"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_margin="10dp"
                                        android:background="#D9D9D9" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textView2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Telefone:"
                                            android:textColor="#000000"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="(51)984408294"
                                            android:textAlignment="viewEnd"
                                            android:textColor="#5B5B5B"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <View
                                        android:id="@+id/view1"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_margin="10dp"
                                        android:background="#D9D9D9" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/text_email_profile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Email:"
                                            android:textColor="#000000"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/text_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="usuario@gmail.com"
                                            android:textAlignment="viewEnd"
                                            android:textColor="#5B5B5B"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <View
                                        android:id="@+id/view2"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_margin="10dp"
                                        android:background="#D9D9D9" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/localizacao_profile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Localização:"
                                            android:textColor="#000000"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/localizacao"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Brasil - RS"
                                            android:textAlignment="viewEnd"
                                            android:textColor="#5B5B5B"
                                            android:textSize="16sp" />
                                    </LinearLayout>




                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_profile"
                        android:layout_margin="24dp"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Editar Perfil" />
                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>


</RelativeLayout>